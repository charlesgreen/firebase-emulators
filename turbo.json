{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV", "FIREBASE_*", "SEED_*"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "outputs": ["dist/**", "build/**", "bin/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "setup": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "docker:build": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "docker:push": {
      "dependsOn": ["docker:build"],
      "outputs": []
    }
  }
}