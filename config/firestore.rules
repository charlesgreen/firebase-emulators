rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default rule - allows read/write for development
    // IMPORTANT: Update these rules for production use
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Example: User-specific data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Example: Public read, authenticated write
    match /public/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Example: Admin-only collection
    match /admin/{document} {
      allow read, write: if request.auth != null && 
        request.auth.token.admin == true;
    }
    
    // Example: Time-based validation
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null && 
        request.time == resource.data.createdAt;
      allow update: if request.auth != null && 
        request.auth.uid == resource.data.authorId;
      allow delete: if request.auth != null && 
        (request.auth.uid == resource.data.authorId || 
         request.auth.token.admin == true);
    }
  }
}