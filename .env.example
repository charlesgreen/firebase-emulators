# Firebase Emulators Configuration

# Project Configuration
FIREBASE_PROJECT_ID=demo-project
GOOGLE_CLOUD_PROJECT=demo-project
NODE_ENV=development

# Emulator Ports (default values)
FIREBASE_EMULATOR_HUB_PORT=5170
FIREBASE_AUTH_PORT=5171
FIREBASE_FIRESTORE_PORT=5172
FIREBASE_HOSTING_PORT=5174
FIREBASE_STORAGE_PORT=5175
FIREBASE_UI_PORT=5179

# Feature Flags - Enable/disable specific emulators
ENABLE_AUTH=true
ENABLE_FIRESTORE=true
ENABLE_HOSTING=true
ENABLE_STORAGE=true

# Seed Data Configuration
SEED_DATA=false
SEED_AUTH=false
SEED_FIRESTORE=false

# Docker Configuration
DOCKER_REPOSITORY=charlesgreen/firebase-emulators
DOCKER_TAG=latest

# Development Settings
DEBUG=false
LOG_LEVEL=info

# Security Settings (for production-like testing)
REQUIRE_AUTH=false
ADMIN_USERS=admin@example.com