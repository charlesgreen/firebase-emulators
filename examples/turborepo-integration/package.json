{
  "name": "my-turborepo-project",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    
    "emulators": "docker-compose -f docker-compose.firebase.yml up -d",
    "emulators:stop": "docker-compose -f docker-compose.firebase.yml down",
    "emulators:seed": "SEED_DATA=true SEED_AUTH=true SEED_FIRESTORE=true docker-compose -f docker-compose.firebase.yml up -d",
    "emulators:clean": "docker-compose -f docker-compose.firebase.yml down -v",
    "emulators:logs": "docker-compose -f docker-compose.firebase.yml logs -f",
    
    "test:integration": "npm run emulators:seed && npm run test && npm run emulators:stop",
    "ci:test": "turbo run test --parallel && npm run test:integration"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.12",
    "eslint": "^8.48.0",
    "prettier": "^3.0.0",
    "turbo": "^1.10.12",
    "typescript": "^5.0.0",
    
    "@types/node": "^20.5.0",
    "concurrently": "^8.2.0"
  },
  "packageManager": "npm@9.6.7",
  "engines": {
    "node": ">=18"
  }
}